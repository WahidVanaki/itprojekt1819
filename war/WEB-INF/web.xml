<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
              http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5"
         xmlns="http://java.sun.com/xml/ns/javaee">

  <!-- Servlets -->
   <servlet>
    <servlet-name>socialMediaServlet</servlet-name>
    <servlet-class>de.hdm.itprojekt.server.SocialMediaAdminImpl</servlet-class>
  </servlet>
  
    <servlet-mapping>
    <servlet-name>socialMediaServlet</servlet-name>
    <url-pattern>/itprojekt/socialmediapinnwand</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>loginService</servlet-name>
  	<servlet-class>de.hdm.itprojekt.server.LoginServiceImpl</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>loginService</servlet-name>
  	<url-pattern>/itprojekt1819/login</url-pattern>
  </servlet-mapping>
  
  <!-- Default page to serve -->
  <welcome-file-list>
    <welcome-file>Itprojekt1819.html</welcome-file>
  </welcome-file-list>

</web-app>
